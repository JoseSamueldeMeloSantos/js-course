//declaração de array
const alunos = ['luiz', 'maria', 'joao']

//acesso de alunos
alunos[0]

//alterando um dado
alunos[0] = 'eduardor'

//para retornar o tamanho do array
alunos.length

//para adicionar no fim da lista
alunos.push('clara')

//adiciona no começo da lista
alunos.unshift("José")

//remove o ultimo aluno da lista
alunos.pop()

//remove o primeiro aluno da lista
alunos.shift()

//para fatiar uma lista
alunos.slice(0,3)

//verificar instancia
alunos instanceof Array

//para apagar um valor de um indice deixando a casa
delete alunos[1]

//usando construtor na criação
let carros = new Array('fiat', 'chevolet', 'BID', 'bulgati')

//apontando outra variavel pra outro array(referencia)
let carroluxo = carros//oque fizer em um acontece no outro

//para fatiar um array
metadeCarros = carros.slice(0,3)
console.log(metadeCarros)

//para transformar um array em uma string
carros.join()
